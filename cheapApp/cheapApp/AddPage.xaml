<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="cheapApp.AddPage"
             Title="Add New List">
  <StackLayout>
    <Grid BackgroundColor="Silver"
      VerticalOptions="FillAndExpand"
			HorizontalOptions="FillAndExpand">
      <Grid.RowDefinitions>
        <RowDefinition/>
        <RowDefinition/>
        <RowDefinition/>
        <RowDefinition/>
        <RowDefinition/>
        <RowDefinition/>
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition
					Width="Auto" />
        <ColumnDefinition
					Width="*" />
      </Grid.ColumnDefinitions>

      <Label Text="Pic" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FontSize="60" TextColor="Black" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>
      
      <Label Text="Name" HorizontalOptions="End" VerticalOptions="Center" FontSize="12" TextColor="Blue" Grid.Row="1" Grid.Column="0"/>
      <Entry x:Name="entryProductName" Placeholder="Input the name of product." HorizontalOptions="Center" VerticalOptions="Center" Grid.Row="1" Grid.Column="1"/>

      <Button x:Name="buttonCommit" Text="Commit" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" BackgroundColor="Green" TextColor="White" Clicked="CommitProduct"/>
      
    </Grid>
  </StackLayout>
</ContentPage>